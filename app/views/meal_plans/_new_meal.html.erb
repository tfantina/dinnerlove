 <% puts "#{@meal_plans} THESE ARE THE MEAL PLANS" %>
 <% if defined?(@meal_plans[:this_week]) && defined?(@meal_plans[:next_week])%>
</div>
<% end %>

 <%= form_with url: meal_plans_path, method: "post" do  %>
  <% meals.each do |dinner| %>
  <%= hidden_field_tag("meal_plan[dinner_ids][]", dinner.id) %>

  <% end %>

  <% unless defined?(@meal_plans[:this_week]) && @meal_plans[:this_week] != nil %>
    <%= hidden_field_tag("meal_plan[week]", :this_week) %>
    <%= submit_tag "This Week", class: "button button-create button-log-radius"%>
  <% end %>

  <% unless defined?(@meal_plans[:next_week]) && @meal_plans[:this_week] != nil  %>
    <%= hidden_field_tag("meal_plan[week]", :next_week) %>
    <%= submit_tag 'Next Week', class: "button button-create button-log-radius", onclick: "console_magic()" %>
  <% end %>
<% end %>
