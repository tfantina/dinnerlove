<% if @meal_plans[:this_week] != nil && @meal_plans[:next_week] != nil %>
</div>
<% end %>

 <%= form_with url: meal_plans_path, method: "post" do  %>
  <% meals.each do |dinner| %>
  <%= hidden_field_tag("meal_plan[dinner_ids][]", dinner.id) %>

  <% end %> 

  <% if @meal_plans[:this_week] == nil %>
    <%= hidden_field_tag("meal_plan[weekof]", Date.today.beginning_of_week) %>
    <%= submit_tag "Meal Plan", class: "button button-create button-log-radius"%>
  <% end %>

  <% if @meal_plans[:next_week] == nil %>
    <%= hidden_field_tag("meal_plan[weekof]", Date.today.beginning_of_week.next_week) %>
    <%= submit_tag 'Next Week', class: "button button-create button-log-radius" %>
  <% end %>
<% end %>