<h1>Tag</h1>

<%= form_with model: @tag do |form| %>
  <%= form.label :name, class: "block text-gray-900 font-semibold mb-2" %>
  <%= form.text_field :name, class: "shadow appearence-none border rounded w-full py-2 px-3 text-gray-800 leading-tight focus:outline-none focus:shadow-outline" %>
  <div class="flex justify-center">
    <%= form.submit class: "button button-create button-radius" %>
  </div>
<% end %>
